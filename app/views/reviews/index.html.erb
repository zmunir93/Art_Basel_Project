<p id="notice"><%= notice %></p>

<h1>See What Our Users Are Saying!</h1>
<div id= "review_button">
  <%= link_to new_review_path do %>
    <button type="button" class="btn btn-outline-primary btn-lg">Write a Review</button>
  <% end %>
</div>

<div class="card">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
          <% @reviews.each do |review| %>
            <br> <%= review.comment %>
            <br class= "review_time"> Added on: <%= time_ago_in_words review.created_at %> ago
            <br>
          <% end %>
    </li>
  </ul>
</div>
